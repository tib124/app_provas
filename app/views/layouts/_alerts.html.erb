<% if notice.present? %>
	<div
		class="fixed inset-x-0 top-4 z-50 flex justify-center px-4 opacity-100 transition duration-300"
		data-controller="flash"
		data-flash-timeout-value="2000"
		role="status"
		aria-live="polite"
	>
		<div class="w-full max-w-lg rounded-2xl border border-emerald-200 bg-emerald-50 px-4 py-3 text-sm text-emerald-950 shadow-lg ring-1 ring-emerald-100">
			<div class="flex items-start gap-3">
				<div class="mt-0.5 text-emerald-700">
					<svg viewBox="0 0 20 20" fill="currentColor" class="h-5 w-5" aria-hidden="true">
						<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.707a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
					</svg>
				</div>
				<div class="flex-1">
					<p class="text-xs font-semibold uppercase tracking-wide text-emerald-800">Sucesso</p>
					<p class="mt-0.5"><%= notice %></p>
				</div>
			</div>
		</div>
	</div>
<% end %>

<% if alert.present? %>
	<div
		class="fixed inset-x-0 top-4 z-50 flex justify-center px-4 opacity-100 transition duration-300"
		data-controller="flash"
		data-flash-timeout-value="2000"
		role="alert"
		aria-live="assertive"
	>
		<div class="w-full max-w-lg rounded-2xl border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-950 shadow-lg ring-1 ring-rose-100">
			<div class="flex items-start gap-3">
				<div class="mt-0.5 text-rose-700">
					<svg viewBox="0 0 20 20" fill="currentColor" class="h-5 w-5" aria-hidden="true">
						<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm.75-11.25a.75.75 0 00-1.5 0v4.5a.75.75 0 001.5 0v-4.5zM10 14a1 1 0 100 2 1 1 0 000-2z" clip-rule="evenodd" />
					</svg>
				</div>
				<div class="flex-1">
					<p class="text-xs font-semibold uppercase tracking-wide text-rose-800">Atenção</p>
					<p class="mt-0.5"><%= alert %></p>
				</div>
			</div>
		</div>
	</div>
<% end %>