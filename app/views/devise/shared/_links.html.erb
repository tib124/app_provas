<div class="space-y-3 text-sm">
  <%- if controller_name != 'sessions' %>
    <%= link_to "Já tem conta? Entrar", new_session_path(resource_name), class: "inline-flex w-full items-center justify-center rounded-xl border border-slate-300/80 bg-white/70 px-4 py-2.5 font-semibold text-slate-900 shadow-sm transition hover:bg-white focus:outline-none focus:ring-2 focus:ring-slate-300 focus:ring-offset-2" %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Primeira vez aqui? Criar conta", new_registration_path(resource_name), class: "inline-flex w-full items-center justify-center rounded-xl border border-slate-300/80 bg-white/70 px-4 py-2.5 font-semibold text-slate-900 shadow-sm transition hover:bg-white focus:outline-none focus:ring-2 focus:ring-slate-300 focus:ring-offset-2" %>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), class: "block text-center font-semibold text-indigo-700 hover:text-indigo-800" %>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "Não recebeu instruções de confirmação?", new_confirmation_path(resource_name), class: "block text-center text-slate-600 hover:text-slate-800" %>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Não recebeu instruções de desbloqueio?", new_unlock_path(resource_name), class: "block text-center text-slate-600 hover:text-slate-800" %>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <div class="pt-2">
      <p class="text-center text-xs font-semibold uppercase tracking-wide text-slate-500">Ou continue com</p>
      <div class="mt-3 space-y-2">
        <%- resource_class.omniauth_providers.each do |provider| %>
          <%= button_to "Entrar com #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "inline-flex w-full items-center justify-center rounded-xl border border-slate-300/80 bg-white/70 px-4 py-2.5 font-semibold text-slate-900 shadow-sm transition hover:bg-white focus:outline-none focus:ring-2 focus:ring-slate-300 focus:ring-offset-2" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
