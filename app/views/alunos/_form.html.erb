<div class="rounded-3xl border border-slate-200/80 bg-white/80 p-6 shadow-lg shadow-slate-200/60 ring-1 ring-black/5 backdrop-blur">
  <%= form_with model: aluno, class: "space-y-4" do |f| %>
    <% if aluno.errors.any? %>
      <div class="rounded-2xl border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-900 ring-1 ring-rose-100">
        <p class="font-semibold">Verifique os campos:</p>
        <ul class="mt-2 list-disc pl-5">
          <% aluno.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="grid grid-cols-1 gap-4 md:grid-cols-3">
      <div>
        <%= f.label :ra, "RA", class: "block text-sm font-semibold text-slate-900" %>
        <%= f.text_field :ra,
                         placeholder: "N874321",
                         disabled: aluno.persisted?,
                         class: "mt-2 w-full rounded-xl border border-slate-300/80 bg-white/80 px-3 py-2.5 text-sm text-slate-900 shadow-sm outline-none transition focus:border-indigo-400 focus:ring-2 focus:ring-indigo-200 disabled:bg-slate-100" %>
        <% if aluno.persisted? %>
          <p class="mt-1 text-xs text-slate-500">O RA não pode ser alterado.</p>
        <% end %>
      </div>

      <div class="md:col-span-2">
        <%= f.label :nome, "Nome", class: "block text-sm font-semibold text-slate-900" %>
        <%= f.text_field :nome, class: "mt-2 w-full rounded-xl border border-slate-300/80 bg-white/80 px-3 py-2.5 text-sm text-slate-900 shadow-sm outline-none transition focus:border-indigo-400 focus:ring-2 focus:ring-indigo-200" %>
      </div>
    </div>

    <div>
      <%= f.label :email, "E-mail", class: "block text-sm font-semibold text-slate-900" %>
      <%= f.email_field :email, class: "mt-2 w-full rounded-xl border border-slate-300/80 bg-white/80 px-3 py-2.5 text-sm text-slate-900 shadow-sm outline-none transition focus:border-indigo-400 focus:ring-2 focus:ring-indigo-200" %>
    </div>

    <div class="pt-2 flex gap-3">
      <%= f.submit (aluno.persisted? ? "Salvar alterações" : "Cadastrar aluno"), class: "inline-flex items-center justify-center rounded-xl bg-gradient-to-r from-indigo-600 to-sky-600 px-5 py-3 text-sm font-semibold text-white shadow-sm shadow-indigo-200/60 transition hover:-translate-y-0.5 hover:shadow-md focus:outline-none focus:ring-2 focus:ring-indigo-400 focus:ring-offset-2" %>
      <%= link_to "Cancelar", alunos_path, class: "inline-flex items-center justify-center rounded-xl border border-slate-300/80 bg-white px-5 py-3 text-sm font-semibold text-slate-900 shadow-sm transition hover:bg-slate-50 focus:outline-none focus:ring-2 focus:ring-slate-300 focus:ring-offset-2" %>
    </div>
  <% end %>
</div>
