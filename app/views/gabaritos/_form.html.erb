<div class="rounded-3xl border border-slate-200/80 bg-white/80 p-6 shadow-lg shadow-slate-200/60 ring-1 ring-black/5 backdrop-blur">
  <div class="rounded-2xl border border-slate-200/80 bg-slate-50/60 p-4">
    <p class="text-sm font-semibold text-slate-900">Questão</p>
    <p class="mt-1 text-sm text-slate-600">
      Tipo: <span class="font-semibold text-slate-900"><%= questao.tipo.humanize %></span>
      • Peso: <span class="font-semibold text-slate-900"><%= questao.peso %></span>
    </p>
    <p class="mt-3 text-sm font-semibold text-slate-900">Enunciado</p>
    <p class="mt-1 text-sm text-slate-700 whitespace-pre-line"><%= questao.enunciado %></p>
  </div>

  <%= form_with model: gabarito,
                url: prova_questao_gabarito_path(prova, questao),
                method: (gabarito.persisted? ? :patch : :post),
                class: "space-y-4 mt-4" do |f| %>
    <% if gabarito.errors.any? %>
      <div class="rounded-2xl border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-900 ring-1 ring-rose-100">
        <p class="font-semibold">Verifique os campos:</p>
        <ul class="mt-2 list-disc pl-5">
          <% gabarito.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :resposta_correta, "Resposta correta", class: "block text-sm font-semibold text-slate-900" %>
      <%= f.text_area :resposta_correta, rows: 5, class: "mt-2 w-full rounded-xl border border-slate-300/80 bg-white/80 px-3 py-2.5 text-sm text-slate-900 shadow-sm outline-none transition focus:border-indigo-400 focus:ring-2 focus:ring-indigo-200" %>
    </div>

    <div class="pt-2 flex gap-3">
      <%= f.submit (gabarito.persisted? ? "Salvar alterações" : "Criar item"), class: "inline-flex items-center justify-center rounded-xl bg-gradient-to-r from-indigo-600 to-sky-600 px-5 py-3 text-sm font-semibold text-white shadow-sm shadow-indigo-200/60 transition hover:-translate-y-0.5 hover:shadow-md focus:outline-none focus:ring-2 focus:ring-indigo-400 focus:ring-offset-2" %>
      <%= link_to "Cancelar", prova_gabarito_path(prova), class: "inline-flex items-center justify-center rounded-xl border border-slate-300/80 bg-white px-5 py-3 text-sm font-semibold text-slate-900 shadow-sm transition hover:bg-slate-50 focus:outline-none focus:ring-2 focus:ring-slate-300 focus:ring-offset-2" %>
    </div>
  <% end %>
</div>
