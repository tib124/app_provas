<div class="space-y-6">
  <div>
    <%= link_to "← Voltar para a prova", prova_path(@prova), class: "text-sm font-semibold text-slate-700 hover:text-slate-900" %>
  </div>

  <div class="flex items-end justify-between gap-4">
    <div>
      <p class="text-sm font-semibold text-slate-600">Gabarito</p>
      <h1 class="mt-2 text-2xl font-bold tracking-tight text-slate-900"><%= @prova.titulo %></h1>
      <p class="mt-1 text-slate-600">Defina as respostas corretas para cada questão.</p>
    </div>
    <%= link_to "Ver questões", prova_questoes_path(@prova), class: "inline-flex items-center justify-center rounded-xl border border-slate-300/80 bg-white px-5 py-3 text-sm font-semibold text-slate-900 shadow-sm transition hover:bg-slate-50 focus:outline-none focus:ring-2 focus:ring-slate-300 focus:ring-offset-2" %>
  </div>

  <% if @questoes.any? %>
    <div class="grid grid-cols-1 gap-4">
      <% @questoes.each_with_index do |q, idx| %>
        <div class="rounded-2xl border border-slate-200/80 bg-white p-6 shadow-sm ring-1 ring-black/5">
          <div class="flex items-start justify-between gap-4">
            <div>
              <p class="text-sm font-semibold text-slate-900">Questão <%= idx + 1 %></p>
              <p class="mt-1 text-sm text-slate-600">
                Tipo: <span class="font-semibold text-slate-900"><%= q.tipo.humanize %></span>
                • Peso: <span class="font-semibold text-slate-900"><%= q.peso %></span>
              </p>
              <p class="mt-3 text-sm font-semibold text-slate-900">Enunciado</p>
              <p class="mt-1 text-sm text-slate-700 whitespace-pre-line"><%= q.enunciado %></p>
            </div>
            <div class="flex gap-2">
              <% if q.gabarito.present? %>
                <%= link_to "Editar", edit_prova_questao_gabarito_path(@prova, q), class: "inline-flex items-center justify-center rounded-xl border border-slate-300/80 bg-white px-4 py-2 text-sm font-semibold text-slate-900 shadow-sm transition hover:bg-slate-50 focus:outline-none focus:ring-2 focus:ring-slate-300 focus:ring-offset-2" %>
                <%= button_to "Excluir", prova_questao_gabarito_path(@prova, q), method: :delete, data: { turbo_confirm: "Tem certeza?" }, class: "inline-flex items-center justify-center rounded-xl border border-rose-200 bg-rose-50 px-4 py-2 text-sm font-semibold text-rose-800 shadow-sm transition hover:bg-rose-100 focus:outline-none focus:ring-2 focus:ring-rose-300 focus:ring-offset-2" %>
              <% else %>
                <%= link_to "Preencher", new_prova_questao_gabarito_path(@prova, q), class: "inline-flex items-center justify-center rounded-xl bg-gradient-to-r from-indigo-600 to-sky-600 px-4 py-2 text-sm font-semibold text-white shadow-sm shadow-indigo-200/60 transition hover:-translate-y-0.5 hover:shadow-md focus:outline-none focus:ring-2 focus:ring-indigo-400 focus:ring-offset-2" %>
              <% end %>
            </div>
          </div>

          <div class="mt-4 rounded-xl bg-slate-50 p-4 ring-1 ring-slate-200/70">
            <p class="text-sm font-semibold text-slate-900">Resposta correta</p>
            <% if q.gabarito.present? %>
              <p class="mt-1 text-sm text-slate-700 whitespace-pre-line"><%= q.gabarito.resposta_correta %></p>
            <% else %>
              <p class="mt-1 text-sm text-slate-600">Ainda não preenchida.</p>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="rounded-2xl border border-slate-200/80 bg-white p-8 text-center shadow-sm ring-1 ring-black/5">
      <p class="text-sm font-semibold text-slate-900">Nenhuma questão encontrada.</p>
      <p class="mt-1 text-sm text-slate-600">Crie as questões da prova antes de preencher o gabarito.</p>
      <div class="mt-5">
        <%= link_to "Criar questões", prova_questoes_path(@prova), class: "inline-flex items-center justify-center rounded-xl bg-gradient-to-r from-indigo-600 to-sky-600 px-5 py-3 text-sm font-semibold text-white shadow-sm shadow-indigo-200/60 transition hover:-translate-y-0.5 hover:shadow-md focus:outline-none focus:ring-2 focus:ring-indigo-400 focus:ring-offset-2" %>
      </div>
    </div>
  <% end %>
</div>
